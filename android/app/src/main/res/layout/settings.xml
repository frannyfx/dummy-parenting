<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/schedule_default_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="vertical">

            <Switch
                android:id="@+id/background_recording_switch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Background recording"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/schedule_default_state_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="When enabled, it will enable audio collection, even when the app is closed." />

            <Button
                android:id="@+id/triggers_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Setup triggers" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/schedule_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="vertical">

            <Switch
                android:id="@+id/schedule_switch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Scheduled recording"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/schedule_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="When enabled, it will allow you to set-up a schedule so background audio will only be collected within specific time ranges." />

            <Button
                android:id="@+id/schedule_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Customise schedule" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/circular_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Circular recording length"
                android:textColor="@android:color/primary_text_light"
                android:textSize="18sp" />

            <SeekBar
                android:id="@+id/circular_recording_seekbar"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:max="5"
                android:progress="3" />

            <TextView
                android:id="@+id/circular_recording_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="3 mins" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/post_trigger_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Post-trigger recording length"
                android:textColor="@android:color/primary_text_light"
                android:textSize="18sp" />

            <SeekBar
                android:id="@+id/post_trigger_recording_seekbar"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:max="10"
                android:progress="5" />

            <TextView
                android:id="@+id/post_trigger_recording_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="5 mins" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>